<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_backbar" />

    <LinearLayout style="@style/edit_layout_style">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center">

            <EditText
                android:id="@+id/number"
                style="@style/activity_edit_text_style"
                android:maxLength="11" />

            <LinearLayout
                android:id="@+id/current_phone_view"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_phone" />

                <TextView
                    android:id="@+id/current_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="137****5678" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            style="@style/edit_layout_center_style">

            <EditText
                android:id="@+id/code"
                style="@style/activity_edit_text_style" />

            <TextView
                android:id="@+id/get_code"
                style="@style/button_style"
                android:text="@string/get_verification_code" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            style="@style/edit_layout_center_style">

            <EditText
                android:id="@+id/new_pass"
                style="@style/activity_edit_text_style" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            style="@style/edit_layout_bottom_style">

            <EditText
                android:id="@+id/confirm_new_password"
                style="@style/activity_edit_text_style" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        style="@style/button_full_width_style"
        android:text="@string/button_commit" />
</LinearLayout>
