<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_backbar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dfdddd" />

    <LinearLayout
        android:id="@+id/bind_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/setting_text_style"
            android:text="@string/bind_phone_number" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/phone_number_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:padding="12dp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            style="@style/setting_icon_margin_right"
            android:src="@mipmap/personal_enter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dfdddd" />

    <LinearLayout
        android:id="@+id/bind_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/setting_text_style"
            android:text="@string/bind_email" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:padding="12dp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            style="@style/setting_icon_margin_right"
            android:src="@mipmap/personal_enter" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dfdddd" />
    <LinearLayout
        android:id="@+id/change_pay_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/setting_text_style"
            android:text="@string/pay_password" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            style="@style/setting_icon_margin_right"
            android:src="@mipmap/personal_enter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dfdddd" />
    <LinearLayout
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/setting_text_style"
            android:text="@string/login_password" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            style="@style/setting_icon_margin_right"
            android:src="@mipmap/personal_enter" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dfdddd" />

</LinearLayout>