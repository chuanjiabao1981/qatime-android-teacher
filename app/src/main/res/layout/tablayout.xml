<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_menu_tab"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    style="@style/tab_menu_height">

    <LinearLayout
        android:layout_width="0dp"
        style="@style/tab_menu_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_img1"
            style="@style/tab_menu_icon_size"
            android:src="@mipmap/tab_message_1" />

        <TextView
            android:id="@+id/tab_text1"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:text="@string/message"
            style="@style/tab_menu_text_color_select" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        style="@style/tab_menu_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_img2"
            style="@style/tab_menu_icon_size"
            android:src="@mipmap/tab_person_2" />

        <TextView
            android:id="@+id/tab_text2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:text="@string/personal_center"
            style="@style/tab_menu_text_color_normal" />
    </LinearLayout>


</LinearLayout>